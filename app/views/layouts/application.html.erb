<!DOCTYPE html>
<html>
<head>
  <title>Graffotos</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <%= render 'layouts/shim' %>
</head>
<body>
  <header class="navbar navbar-fixed-top navbar-inverse">
    <div class="container">
      <%= link_to "Graffotos", root_path, id: "logo" %>
      <nav>
        <ul class="nav navbar-nav navbar-right">
          <li><a href="/items">Products</a></li>
          <li><a href="/contact">Contact Us</a></li>
          <% if user_signed_in? %>
            <li>
            <%= link_to('Logout', destroy_user_session_path, :method => :delete) %>        
            </li>
          <% else %>
            <li>
            <%= link_to('Login', new_user_session_path)  %>  
            </li>
          <% end %>
          <li><a href="/cart">View Cart(<%=@total_items%> items, €<%=@total_price%>)</a></li>
        </ul>
      </nav>
    </div>
  </header>
   
  <div id='container'>
    <div id='content'>
      
   
      
      <p class="notice"><%= notice %></p>
      <p class="alert"><%= alert %></p> 
      
      <% flash.each do |key, value| %>
<div class="alert alert-<%= key %> alert-dismissable">
    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
    <%= value %>
</div>
<% end %>

 <% if current_user %>
    Welcome <%= current_user.email %> <%= link_to 'Logout', destroy_user_session_path, method: :delete %>
<% end %>

  		<%= yield %>
    </div>
    
  </div>
  <%= render 'layouts/footer' %>
</body>
</html>
